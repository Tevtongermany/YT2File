<adonisCtrls:AdonisWindow x:Class="YT2File.View.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YT2File.View"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:adonisCtrls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:adonisExt="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        WindowStyle="None"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SplashScreen" Height="200" Width="200" Loaded="OnLoaded" ResizeMode="NoResize">
    <Grid>
        <Image Height="100" Width="100" Source="/Assets/logo/Yt2file.ico" Stretch="Fill" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,145,0,0" TextWrapping="Wrap" Text="YT2FIle" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,161,0,0" TextWrapping="Wrap" Text="{Binding Path=Title, Mode=TwoWay}" VerticalAlignment="Top" TextAlignment="Center"/>
    </Grid>
</adonisCtrls:AdonisWindow>
